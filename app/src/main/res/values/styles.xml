<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorOnSurface">@color/app_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/bg_page_default</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- 透明主题会引起activity生命周期变化，谨慎使用。 -->
    <style name="TransparentTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/bg_page_default</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="view_margin">
        <item name="android:layout_marginLeft">@dimen/dp_24</item>
        <item name="android:layout_marginRight">@dimen/dp_24</item>
    </style>

</resources>
