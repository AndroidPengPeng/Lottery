<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/dp_10"
    android:background="@drawable/dialog_shape_loading">

    <TextView
        android:id="@+id/dialog_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="请稍后..."
        android:textColor="@color/white"
        android:textSize="@dimen/text_medium" />

    <cn.tofirst.health.widget.ProgressView
        android:id="@+id/dialog_progress_view"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:progress_text_size="@dimen/text_medium"
        app:progress_text_color="@color/white"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10" />

</LinearLayout>