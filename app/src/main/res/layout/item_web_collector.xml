<?xml version="1.0" encoding="utf-8"?>
<com.peng.lottery.app.widget.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentView="@+id/layout_content"
    app:rightMenuView="@+id/layout_right">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_tab_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_6">

        <com.peng.lottery.app.widget.HandIconView
            android:id="@+id/tv_url_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_url_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_small" />

            <com.peng.lottery.app.widget.RoundTextView
                android:id="@+id/tv_collection_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:padding="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small"
                app:rtvBgColor="@color/text_gray"
                app:rtvRadius="@dimen/dp_6" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="@dimen/dp_120"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_web_set_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/selector_confirm_button"
            android:gravity="center"
            android:text="@string/app_home_text"
            android:textColor="@color/white"
            android:textSize="@dimen/text_medium" />

        <Button
            android:id="@+id/bt_web_url_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/selector_delete_button"
            android:gravity="center"
            android:text="@string/app_delete_text"
            android:textColor="@color/white"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

</com.peng.lottery.app.widget.EasySwipeMenuLayout>